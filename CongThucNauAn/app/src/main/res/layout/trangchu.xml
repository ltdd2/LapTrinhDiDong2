<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgHinhDemo"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/goicatre"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hôm Nay Ăn Gì ?"
                    android:textSize="25sp"
                    android:textColor="#FF0000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem Thêm"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/dsMonAnNoiBat"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Món Theo Danh Mục"
                    android:textSize="25sp"
                    android:textColor="#FF0000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem Thêm"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:gravity="right"/>
            </LinearLayout>

            <GridView
                android:id="@+id/girdViewChuyenMuc"
                android:numColumns="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </GridView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chúc Bạn Thành Công"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"/>
        </LinearLayout>


    </ScrollView>

</LinearLayout>