<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/draw_layout"
    tools:context=".TrangChuActivity"
    tools:openDrawer="start">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0033FF"
            app:titleTextColor="#fff">
        </android.support.v7.widget.Toolbar>
       <ScrollView
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:scrollbars="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <ImageView
                   android:id="@+id/imgHinhDemo"
                   android:scaleType="fitXY"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:src="@drawable/goicatre"/>

               <TextView
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="DANH MỤC MÓN ĂN"
                   android:background="#00AA00"
                   android:textSize="25sp"
                   android:textColor="#fff"/>

               <android.support.v7.widget.RecyclerView
                   android:id="@+id/dsMonAnNoiBat"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </android.support.v7.widget.RecyclerView>
               <TextView
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="MÓN ĂN MỚI NHẤT"
                   android:background="#00AA00"
                   android:textSize="25sp"
                   android:textColor="#fff"/>
               <GridView
                   android:id="@+id/gv"
                   android:numColumns="2"
                   android:layout_width="match_parent"
                   android:layout_height="320dp">

               </GridView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Chúc Bạn Thành Công"
                   android:gravity="center"
                   android:textColor="@color/colorAccent"
                   android:background="@color/colorPrimary"/>
           </LinearLayout>


       </ScrollView>

   </LinearLayout>

   <android.support.design.widget.NavigationView
       android:id="@+id/navigation"
       app:headerLayout="@layout/header"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:background="#6666FF"
       app:itemTextColor="#FF0000"
       app:itemIconTint="#FFFF66"
       app:menu="@menu/draw_menu"
       android:layout_gravity="start">
   </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>